
@model IEnumerable<EmployeeManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Employee";
}

<div class="col-6">
    <h2 class="text-primary">Employees List</h2>
</div>

<div class="container p-3">
    <div class="row pt-10">
        @*<div class="col-6">
            <h4>Employee List</h4>
        </div >*@
        <div class="col-12">
            <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: #00b9ff;float: right" asp-area="" asp-controller="Employees" asp- asp-action="Create">Register</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        EmployeeId
                    </th>
                    <th>
                        FirstName
                    </th>
                    <th>
                        LastName
                    </th>
                    <th>
                        BirthDate
                    </th>
                    <th>
                        HireDate
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="10%">@obj.EmployeeId</td>
                    <td width="30%">@obj.FirstName</td>
                    <td width="20%">@obj.LastName</td>
                    <td width="20%">@obj.BirthDate</td>
                    <td width="10%">@obj.HireDate</td>
                    <td width="40%">@obj.Address</td>
                    <td width="40%">@obj.City</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Employees" asp-route-Id="@obj.EmployeeId" asp-action="update" class="btn btn-primary mx-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-controller="Employees" asp-route-Id="@obj.EmployeeId" asp-action="Delete" class="btn btn-danger mx-3">
                                <i class="far fa-trash-alt"></i> Delete
                            </a>
                        </div>
                </tr>
                }
            </tbody>
        </table>
    }
</div>


